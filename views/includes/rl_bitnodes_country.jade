.panel.panel-default
  //.panel-heading
    //h3.panel-title country
  table.table.table-hover.table-bordered(cellspacing="0")
    thead
      tr
        th(style='text-align:center;') 
          span.fa.fa-flag-checkered
        th.hidden-xs #{settings.locale.net_country}
        th %
    tbody
      - var count = 0
      each item in country_list
        - count = count + 1
        - var itemRank = count
        - var itemCountry = item.country
        - var itemNodes = item.nodes
        - var percentage = ((itemNodes / bitnodeslist.total_nodes) * 100).toFixed(2)
        - var strItemNodes = itemNodes + '(' + percentage + '%)'
        tr
          td(style='text-align:center;') 
            =itemRank
          td.hidden-xs.text-left
            =itemCountry
          td.hidden-xs.text-left
            =strItemNodes
