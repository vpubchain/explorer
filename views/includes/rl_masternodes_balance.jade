.panel.panel-default
  .panel-heading
    h3.panel-title 主节点余额
  table.table.table-hover.table-bordered(cellspacing="0")
    thead
      tr
        th(style='text-align:center;') 
          span.fa.fa-flag-checkered
        th.hidden-xs 主节点IP
        th #{settings.locale.tx_address}
        th.hidden-xs #{settings.locale.rl_balance} (#{settings.symbol})
        th.hidden-xs(style='text-align:center;') %
    tbody
      - var count = 0
      - function sortId(a,b){  return b.balance-a.balance  }
      - var masternode_addresses_list = masternode_addresses.sort(sortId)
      each item in masternode_addresses
        - count = count + 1
        - var itemFixed = item.balance / 100000000
        - var itemMasterNodeIP = item.masternode_ip
        - var percentage = (itemFixed / stats.supply) * 100
        tr
          td(style='text-align:center;') 
            =count
          td.hidden-xs.text-right
            =itemMasterNodeIP
          td 
            a.mono(href='/address/#{item.a_id}') #{item.a_id}
            include ./rl_labels.jade
          td.hidden-xs.text-right
            =itemFixed.toFixed(2)
          td.hidden-xs(style='text-align:center;') 
            =percentage.toFixed(2)